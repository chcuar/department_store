<%= form_with(model: [@department, @item], local: true, class: "ui form") do |f| %>
<h1><%= @item.id ? ('Edit Item') : ('Add Item') %></h1>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, required: true, placeholder: "Name" %>
  </div>
  <div class="field">
  <div class="field">
    <div class="field">
    <%= f.label :price %>
    <%= f.number_field :price, required: true, placeholder: "Price" %>
  </div>

<%= f.submit nil, class: "i green button inverted"%>
<% end %>